generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "sqlite"
  url          = "file:./db.sqlite"
  relationMode = "prisma"
}

model User {
  id          String       @id
  punishments Punishment[]
}

model Punishment {
  id          String   @id @default(cuid())
  reason      String
  type        Int
  punishedAt  DateTime @default(now())
  length      Int?
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  moderatorId String

  @@index([userId])
}
