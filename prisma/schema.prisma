// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

model User {
  id          String       @id
  punishments Punishment[]
}

model Punishment {
  id     String @id @default(cuid())
  type   Int
  user   User   @relation(fields: [userId], references: [id])
  userId String
}
